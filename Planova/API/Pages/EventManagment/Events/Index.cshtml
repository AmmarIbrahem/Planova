@page
@model Planova.API.Pages.EventManagment.Events.IndexModel
@{
    ViewData["Title"] = "Event Managment";
}

<h1>Event Managment</h1>

<p>
    <a class="btn btn-primary" href="/EventManagment/Events/Create">Create Event</a>
</p>

@if (Model.Error != null)
{
    <div class="alert alert-danger">@Model.Error</div>
}
else if (Model.Events.Count == 0)
{
    <p>No events available.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Location</th>
                <th>Start</th>
                <th>End</th>
                <th>Capacity</th>
                <th>Registered</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var e in Model.Events)
            {
                <tr>
                    <td>@e.Name</td>
                    <td>@e.Location</td>
                    <td>@e.StartTime.ToString("g")</td>
                    <td>@e.EndTime.ToString("g")</td>
                    <td>@e.Capacity</td>
                    <td>@e.TotalParticipants</td>
                    <td>
                        <a class="btn btn-outline-primary btn-sm" href="/EventManagment/Events/Edit?id=@e.Id">Edit</a>
                        <form method="post" asp-page-handler="Delete" class="d-inline" onsubmit="return confirm('Delete this event?');">
                            <input type="hidden" name="id" value="@e.Id" />
                            <button type="submit" class="btn btn-outline-danger btn-sm">Delete</button>
                        </form>
                        <a class="btn btn-outline-secondary btn-sm" href="/EventManagment/EventBookings?eventId=@e.Id">Registrations</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<p>
    <a class="btn btn-secondary" href="/PublicDiscovery">Back to Events</a>
</p>
